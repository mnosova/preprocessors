//introduction
.navigation {
  text-align: center;
  margin-top: 50px;
}

//fluid block
.test-fluid-bg {
  bg-jpg(test-fluid-bg)
  fluid-bg(1604, 899)
  > div {
    absolute()
  }

}

//vertical-middle
.test-vertical-middle {
  height: 300px;
  background-color: $dark-gray;
  vertical-middle();
  .inner {
    vertical-middle-inner(16px);
    width: 130px;
    padding: 0 10px;
    background-color: $white;
  }
}

//inlineblock-justify
.test-inline-block-justify {
  inline-block-justify();
  background-color: $gray;
  .inner {
    inline-block-justify-inner(16px, normal);
    background-color: $white;
    padding: 20px 15px;
    width: 30%;
    vertical-align: top;
    text-justify: auto;
    text-align-last: auto;
    text-align: left;
  }
}

@media all and (max-width: 600px) {
  .test-inline-block-justify {

    .inner {

      width: 40%;

    }

  }

}

//table-cell
.test-table-cell {
  padding: 20px 30px;
  table-cell();
  background-color: $white;
  .wrap {
    background-color: $light-gray;
    table-cell-inner();
    padding: 10px;
    width: 50%;

  }
  .inner {
    table-cell-inner();
    background-color: $dark-gray;
    padding: 20px;
    width: 25%;

  }

}

@media all and (max-width: 600px) {
  .test-table-cell {
    .wrap {
      display: table;
      width: 100%;

    }
    .inner {

      width: 50%;

    }
  }

}

//center-translate
.test-center-translate {
  position: relative;
  width: 100%;
  height: 300px;
  background-color: $light-gray;


  .inner {
    center-translate();
    padding: 50px;
    background-color: $gray;
  }

}

.test-center-margin {
  max-width: 1200px;
  margin: 0 auto;

  .wrap {
    fluid-img(300);
  }
  .inner {
    fluid-img-wrap(600px, 300px);
    border: 1px solid;
    padding: 30px;

    span {
      width: 100px;
      height: 63px;
      position: absolute;
      right: -45px;
      top: 140px;
      background-color: $light-gray;

    }

  }
  img {
    center-margin(1200px, 300px);
  }
}

//absolute
.test-absolute-link {
  position: relative;
  height: 300px;
  text-align: center;
  line-height: 300px;

  div {

    background-color: $gray;
  }
  a {
    absolute();
  }
}

//prefix
.test-prefix {
  width: 300px;
  height: 300px;
  margin: 0 auto;
  padding: 20px;
  background-color: $light-gray;

  .inner-1 {
    text-overflow(nowrap);

  }
  .inner-2 {
    smoothing();

  }
  .inner-3 {
    unselect();

  }
}

.test-prefix-1 {
 radius(5px);
 b-shad(0px 0px 60px -10px rgba(0, 0, 0, 0.75));
  transition(all .3s ease-in);
  transition-delay(.4s);
  box-sizing();
  width: 300px;
  height: 300px;
  margin: 0 auto;
  color: $white;
  padding: 20px;
  bg-jpg(test-prefix);
  background-color: $black;
  bg-size(40% 50%);


  &:hover {
    width: 200px;

  }

}

.test-prefix-2 {
  t-shad(3px 0px 1px rgba(255, 0, 0, 0.75));
  min-height: 300px;
  color: $white;
  margin: 0 auto;
  padding: 40px;
  position: relative;
  background-color: $light-gray;
  &:before {
    pseudo(100px, 100px, 50px, 30px, block);
    background-color: $white;
    opacity(0.8);
    rotate(45deg);
  }
  .inner {
    bg-jpg(test-prefix);
    background-color: $light-gray;
    padding: 50px;
    margin: 50px;
    border: 10px dashed $gray;
    bg-clip(border-box);
    &:hover {
      scale(0.95);

    }
  }
}

.test-td-dot {
  width: 300px;
  margin: 0 auto;
  padding: 30px 20px;
  property-table($light-gray);
  p {
    property-row();
    &.property:before {
      property-line(4px);
      border-bottom: 2px dotted $dark-gray;
    }
    span {
      property-name($light-gray);
      padding-right: 2px;

    }
    b {
      property-val($light-gray);
      padding-left: 3px;

    }
  }

}

//test-no-number-list
.test-no-number-list {

  background-color: $light-gray;
  width: 800px;
  margin: 0 auto;
  padding: 30px;
  ul {

    li {
      no-number-list-item(20px);
      &:before {
        pseudo(5px, 0, 10px, 10px, block);
        no-number-list-dot($white);
        border: 2px solid $dark-red;
radius(50%);
      }

    }
  }

}

//test-number-list
.test-number-list {

  background-color: $gray;
  width: 800px;
  margin: 0 auto;
  padding: 30px;
  ol {
    number-list(li);
    li {
      number-list-item(20px);
      &:before {
        number-list-num(li, ')');
        font-weight: bold;
        color: $dark-red;

      }
    }
  }

}

//test-sprite
.test-sprite {
  margin: 0 auto;
  width: 200px;
  background-color: $white;
  padding: 60px 20px;
  span {
    cursor: pointer;
    background-image: url($url-img+'test-sprite.png');

  }

}

.icon-f {

  sprite(27px, 27px, 1, 1);

  &:hover {
