.icon-i {
  sprite(27px, 27px, 1, 3);
  &:hover {
    sprite(27px, 27px, 0, 3);

  }
}

.icon-o {
  sprite(27px, 27px, 1, 4);
  &:hover {
    sprite(27px, 27px, 0, 4);

  }
}

.icon-s {
  sprite(27px, 27px, 1, 5);
  &:hover {
    sprite(27px, 27px, 0, 5);

  }
}

//test-triangle
.test-triangle {
  background-color: $dark-gray;
  width: 300px;
  margin: 0 auto;
  height: 300px;
  position: relative;
  .close-icon {

    close-icon(10, 20, $dark-red, $dark-gray);
    top: 0;
    right: 10px;
  }
  .top {
    triangle(20, 20, $dark-red, t);
    top: 20px;
    left: 0;
  }

  .right {
    triangle(20, 20, $dark-red, r);
    top: 40px;
    left: 0;
  }

  .bottom {
    triangle(20, 20, $dark-red, b);
    top: 60px;
    left: 0;
  }

  .left {
    triangle(20, 20, $dark-red, l);
    top: 80px;
    left: 0;
  }

  .top-left {
    triangle(20, 20, $dark-red, tl);
    top: 100px;
    left: 0;
  }

  .top-right {
    triangle(20, 20, $dark-red, tr);
    top: 120px;
    left: 0;
  }

  .bottom-right {
    triangle(20, 20, $dark-red, br);
    top: 140px;
    left: 0;
  }

  .bottom-left {
    triangle(20, 20, $dark-red, bl);
    top: 160px;
    left: 0;
  }

}

//test-arrow
.test-arrow {

  background-color: $gray;
  width: 300px;
  margin: 0 auto;
  height: 300px;
  position: relative;
  &:before {

    triangle(30, 30, $dark-red, r);
    top: 30px;
    left: 100%;
  }
  &:after {
    triangle(30, 30, $gray, r);
    top: 30px;
    left: 99%;

  }

  .top {

    position: relative;
    &:before {
      triangle(20, 20, $dark-red, t);
      top: 19px;
      left: 0;
    }

    &:after {
      triangle(20, 20, $gray, t);
      top: 20px;
      left: 0;

    }
  }

  .right {

    position: relative;
    &:before {
      triangle(20, 20, $dark-red, r);
      top: 40px;
      left: 0;

    }

    &:after {
      triangle(20, 20, $gray, r);
      top: 40px;
      left: -1px;
    }

  }

  .bottom {
    position: relative;
    &:before {
      top: 60px;
      left: 0;
      triangle(20, 20, $dark-red, b);

    }

    &:after {
      top: 59px;
      left: 0;
      triangle(20, 20, $gray, b);

    }

  }

  .left {
    position: relative;
    &:before {
      top: 80px;
      left: -1px;
      triangle(20, 20, $dark-red, l);

    }

    &:after {
      top: 80px;
      left: 0;
      triangle(20, 20, $gray, l);

    }

  }

  .top-left {
    position: relative;
    &:before {
      top: 99px;
      left: 0;
      triangle(20, 20, $dark-red, tl);

    }

    &:after {
      top: 100px;
      left: 1px;
      triangle(20, 20, $gray, tl);

    }

  }

  .top-right {
    position: relative;
    &:before {
      top: 119px;
      left: 0;
      triangle(20, 20, $dark-red, tr);

    }

    &:after {
      top: 120px;
      left: -1px;
      triangle(20, 20, $gray, tr);

    }

  }

  .bottom-right {
    position: relative;
    &:before {
      top: 140px;
      left: 1px;
      triangle(20, 20, $dark-red, br);

    }

    &:after {
      top: 139px;
      left: 0;
      triangle(20, 20, $gray, br);

    }

  }

  .bottom-left {
    position: relative;
    &:before {
      top: 160px;
      left: 0;
      triangle(20, 20, $dark-red, bl);

    }

    &:after {
      top: 159px;
      left: 1px;
      triangle(20, 20, $gray, bl);

    }

  }

}

