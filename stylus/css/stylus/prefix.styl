box($border-box = border-box) {
  box-sizing: $border-box;

}

radius($radius) {
  border-radius: $radius;

}

bg-size($size) {
  background-size: $size;

}

b-shad($string) {
box-shadow: $string;

}

smoothing($val = antialiased) {
  font-smoothing: $val;

}

unselect() {

  user-select: none;
  -webkit-touch-callout: none;
  text-size-adjust: none;
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);

}

bg-clip($bg-clip) {
  background-clip: $bg-clip;

}

t-shad($string) {
  text-shadow: $string;

}

//one line text
text-overflow($wspace) {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: $wspace;

}

transition($transition) {
  transition: $transition;

}

transition-delay($delay) {
  transition-delay: $delay;

}

translate($x, $y){
  transform: "translate(%s,%s )" % ($x $y);

}

scale($num) {
  transform: "scale(%s )" % $num;

}

rotate($deg) {
  transform: "rotate(%s)" % $deg;
}

opacity($opacity) {
  opacity: $opacity;
}

